<div class="booking-bg", style="height: 100vh">
  <div class="central bg-light", style="width: 30rem">
    <h1 class="text-danger">Signup</h1>
    <%= form_with model: @user do |form| %>
      
      <div>
        <div><%= form.label :email %></div>
        <%= form.email_field :email %>
        <% @user.errors.full_messages_for(:email).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div>
        <div><%= form.label :password %></div>
        <%= form.password_field :password %>
        <% @user.errors.full_messages_for(:password).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div>
        <div><%= form.label :password_confirmation %></div>
        <%= form.password_field :password_confirmation %>
        <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="m-3">
        <%= form.submit "Submit", class:"btn btn-outline-warning"%> 
      
        </div>
    <% end %>
  </div>
  <div class="text-center text-white member">
  <span>Member?</span>
  <a class="btn btn-light" href="/login">Login</a>
  </div>
</div>
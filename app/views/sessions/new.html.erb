
  <div class="background-image .img-fluid", style="height: 100vh">
    <div class="container position-absolute middle-box", style="width: 32rem">
    <h1>Login</h1>
    <%= form_with method: "post", url: "/sessions" do |form| %>
      <div>
        <div><%= form.label :email %></div>
        <%= form.email_field :email %>
      </div>
      <div>
        <div><%= form.label :password %></div>
        <%= form.password_field :password,class:"mb-3" %>
      </div>
      <div>
        <%= form.submit "Submit", class:"mb-3 btn btn-outline-warning" %>
      </div>
      <div>
      <a href="/users/new", class="btn btn-secondary btn-sm mb-2">Not a Member? Join The Fun</a>
      </div>
    </div>
    
  <% end%>
  
  </div>
